<h3>ユーザー編集</h3>

<%= form_with model: @schedule do |f| %>
   <table>
     <tr>
       <th><%= f.label:title,"タイトル" %></th>
       <td><%= f.text_field:title %></td>
     </tr>
     <tr>
       <th><%=f.label:start_at,"開始日" %></th>
       <td><%= f.date_field:start_at %></td>
     </tr>
     <tr>
       <th><%= f.label:end_at,"終了日" %></th>
       <td><%= f.date_field:end_at %></td>
     </tr>
     <tr>
       <th><%= f.label:"終日の場合はチェックを入れます" %></th>
       <td><%= f.check_box:allday,{},true,false %></td>
     </tr>
     <tr>
      <th><%=f.label:memo,"スケジュールメモ"%></th>
      <td><%=f.text_area:memo%></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "編集を完了する" %></li>
       <li><%= link_to "ユーザー情報一覧に戻る", :schedules %></li>
     </ul>
   </div>
 <% end %>