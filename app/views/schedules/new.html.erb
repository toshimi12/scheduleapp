<header>スケジュール管理アプリ</header>

<h3>予定の新規追加</h3>

<%=form_with(model:@schedule,local:true) do |f|%>

  <tr>
    <th><%=f.label:title,"タイトル"%></th>
    <td><%=f.text_field:title%></td>
  </tr>
  <p>
  <tr>
    <th><%=f.label:start_at,"開始日"%></th>
    <td><%=f.date_field:start_at%></td>
  </tr>
  </p>
  
  <p>
  <tr>
    <th><%=f.label:end_at,"終了日"%></th>
    <td><%=f.date_field:end_at%></td>
  </tr>
  </p>
  
  <p>
    <tr>
    <th><%=f.label:"終日の場合はチェックを入れます"%></th>
    <td><%=f.check_box:allday,{},true,false%>
    </tr>
    </p>
  
  <tr>
    <th><%=f.label:memo,"スケジュールメモ"%></th>
    <td><%=f.text_area:memo%></td>
  </tr>
  
  <div>
     <ul>
       <li><%=link_to"キャンセル", :schedules%></li>
       <li><%=f.submit"保存"%></li>
     </ul>
   </div>
  </tr>
  <%end%>
  